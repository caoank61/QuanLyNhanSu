@model IEnumerable<QuanLyNhanSu.Models.ChucVu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var stt = 0l;
}
<h2>Danh sách chức vụ</h2>

<div class="form-group row">
    <div class="col-md-1">
        <a href="@Url.Action("Create","ChucVus")" class="btn btn-success">Thêm mới</a>
    </div>
</div>
<table class="table table-striped table-bordered text-center">

    <tr>
        <th>STT</th>
        <th>
           Tên chức vụ
        </th>
        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        stt++;
        <tr>
            <td>@stt</td>
            <td>
                @Html.DisplayFor(modelItem => item.TenCV)
            </td>
            <td>
                <a href="@Url.Action("Details", "ChucVus", new { id = item.Id })" class="btn btn-success btn-sm"><i class="fa fa-book"></i></a>
                <a href="@Url.Action("Edit", "ChucVus", new { id = item.Id })" class="btn btn-primary btn-sm"><i class="fas fa-pen"></i></a>
                <a href="@Url.Action("Delete", "ChucVus", new { id = item.Id })" class="btn btn-danger btn-sm"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
    }

</table>
