@model QuanLyNhanSu.Models.NhanVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listPB = ViewBag.IdPB as List<QuanLyNhanSu.Models.PhongBan>;
    var listTDHV = ViewBag.IdTDHV as List<QuanLyNhanSu.Models.TrinhDoHocVan>;
    var listCV = ViewBag.IdCV as List<QuanLyNhanSu.Models.ChucVu>;
}

<h2>Sửa thông tin cá nhân</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Thông tin cá nhân</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.IdTK)
    @Html.HiddenFor(model => model.DanToc)
    @Html.HiddenFor(model => model.ChuyenNganh)
    @Html.HiddenFor(model => model.IdTDHV)
    @Html.HiddenFor(model => model.STK)
    @Html.HiddenFor(model => model.NganHang)
    @Html.HiddenFor(model => model.BacLuong)
    @Html.HiddenFor(model => model.BacLuong)
    @Html.HiddenFor(model => model.TaiKhoan.IdCV)
    @Html.HiddenFor(model => model.Luong)
    @Html.HiddenFor(model => model.IdPB)


    <div class="form-group">
        <div class="control-label col-md-2">Họ tên</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Email</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Số điện thoại</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Giới tính</div>
        <div class="col-md-10">
            <select name="GioiTinh" class="form-control">
                <option value="0" @(Model.GioiTinh == true ? "selected" : "")>Nam</option>
                <option value="1" @(Model.GioiTinh == false ? "selected" : "")>Nữ</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Ngày sinh</div>
        <div class="col-md-10">
            <input value="@Model.NgaySinh.Value.ToString("dd/MM/yyyy")" name="NgaySinh" class="form-control" type="datetime" />
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Quê quán</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.QueQuan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.QueQuan, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Dân tộc</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DanToc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DanToc, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Chuyên ngành</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ChuyenNganh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ChuyenNganh, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Số tài khoản</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.STK, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.STK, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Ngân hàng</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NganHang, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NganHang, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row" style="padding-top:10px;padding-left:10px">
        <input type="submit" value="Cập nhật" class="btn btn-success" />
    </div>
</div>
}